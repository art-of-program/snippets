{
  "manifest_version": 2,
  "name": "Auto Refresh Extension",
  "version": "1.0",
  "description": "Automatically refreshes the active tab every 5 minutes.",
  "background": {
    "scripts": ["background.js"],
    "persistent": true
  },
  "permissions": [
    "tabs",
    "activeTab"
  ],
  "browser_action": {
    "default_title": "Start Auto Refresh",
    "default_icon": {
      "16": "icon16.png",
      "48": "icon48.png",
      "128": "icon128.png"
    }
  }
}